{
  "manifest_version": 3,
  "name": "Manaba Plus",
  "version": "1.5.4",
  "description": "Automatically download contents on Chuo University Manaba",
  "action": {
    "default_title": "Manaba Plusを開く"
  },
  "icons": {
    "16": "img/icon-mp-16.png",
    "32": "img/icon-mp-32.png",
    "48": "img/icon-mp-48.png",
    "128": "img/icon-mp-128.png"
  },
  "options_page": "options/index.html",
  "background": {
    "service_worker": "popup/index.js"
  },
  "permissions": ["storage", "downloads"],
  "content_scripts": [
    {
      "matches": ["https://gakunin-idp.c.chuo-u.ac.jp/sso/timeout.cgi*"],
      "js": ["sso/index.js"],
      "css": ["style.css"]
    },
    {
      "matches": ["https://room.chuo-u.ac.jp/ct/course*_report_*"],
      "js": ["attachment/index.js"],
      "css": ["style.css"]
    },
    {
      "matches": ["https://room.chuo-u.ac.jp/ct/home*"],
      "js": ["home/index.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "home/index.html",
        "contents/index.html",
        "options/index.html"
      ],
      "matches": ["https://room.chuo-u.ac.jp/*"]
    }
  ]
}
