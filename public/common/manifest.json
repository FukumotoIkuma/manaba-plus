{
  "manifest_version": 3,
  "name": "Manaba Plus",
  "version": "2.0.0",
  "description": "Add awesome modifications to Chuo University manaba",
  "permissions": ["storage", "downloads"],
  "icons": {
    "16": "img/icon-mp-16.png",
    "32": "img/icon-mp-32.png",
    "48": "img/icon-mp-48.png",
    "128": "img/icon-mp-128.png"
  },
  "action": {
    "default_title": "Manaba Plusを開く",
    "default_popup": "main-panel/index.html"
  },
  "options_page": "options/index.html",
  "content_scripts": [
    {
      "matches": ["https://room.chuo-u.ac.jp/ct/*"],
      "js": ["common/index.js"],
      "css": ["common/style.css"]
    },
    {
      "matches": [
        "https://room.chuo-u.ac.jp/ct/home",
        "https://room.chuo-u.ac.jp/ct/home?*",
        "https://room.chuo-u.ac.jp/ct/home_?*",
        "https://room.chuo-u.ac.jp/ct/home__*",
        "https://room.chuo-u.ac.jp/ct/home_course",
        "https://room.chuo-u.ac.jp/ct/home_course_*",
        "https://room.chuo-u.ac.jp/ct/home_course?*"
      ],
      "js": ["home/index.js"],
      "css": ["home/style.css"]
    },
    {
      "matches": ["https://room.chuo-u.ac.jp/ct/course*_report"],
      "js": ["report/index.js"],
      "css": ["report/style.css"]
    },
    {
      "matches": ["https://room.chuo-u.ac.jp/ct/course*_report_*"],
      "js": ["attachment/index.js"],
      "css": ["attachment/style.css"]
    },
    {
      "matches": ["https://room.chuo-u.ac.jp/ct/course*_grade"],
      "js": ["grade/index.js"],
      "css": ["grade/style.css"]
    },
    {
      "matches": ["https://gakunin-idp.c.chuo-u.ac.jp/sso/timeout.cgi*"],
      "js": ["bad-status/index.js"],
      "css": ["bad-status/style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "contents/index.html",
        "home/module.html",
        "main-panel/module.html",
        "options/index.html"
      ],
      "matches": ["https://room.chuo-u.ac.jp/*"]
    }
  ]
}
