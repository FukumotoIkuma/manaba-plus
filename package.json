{
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "lint": "npm run lint:prettier && npm run lint:es && npm run lint:style ",
    "lint:prettier": "prettier --check --loglevel=warn \"**/*.{ts,js,scss,md}\"",
    "lint:es": "eslint --max-warnings=0 \"**/*.{ts,js}\"",
    "lint:style": "stylelint \"**/*.{css,scss}\"",
    "format": "npm run format:prettier && npm run format:es && npm run format:style",
    "format:prettier": "prettier --check --write --loglevel=warn \"**/*.{ts,js,scss,md}\"",
    "format:es": "eslint --max-warnings=0 --fix \"**/*.{ts,js}\"",
    "format:style": "stylelint --fix \"**/*.{css,scss}\"",
    "watch": "webpack --watch --config config/webpack.dev.js",
    "build": "eslint . && rm -rf build/* && webpack --config config/webpack.prod.js",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.217",
    "auto-changelog": "^2.4.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-typescript": "^1.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "mini-css-extract-plugin": "^2.7.2",
    "path-browserify": "^1.0.1",
    "prettier": "^2.8.4",
    "sass": "^1.58.3",
    "sass-loader": "^13.2.0",
    "sortable-decoration": "^1.0.1",
    "string-replace-loader": "^3.1.0",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-scss": "^4.4.0",
    "ts-loader": "^9.4.2",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "zip-webpack-plugin": "^4.0.1"
  }
}
