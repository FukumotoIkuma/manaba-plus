{
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write . && eslint --fix .",
    "watch": "webpack --mode=development --watch --config config/webpack.common.js",
    "build": "eslint . && rm -rf build/* && webpack --mode=production --config config/webpack.prod.js",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "lint-staged": {
    "*.{ts,js,html,json}": [
      "prettier --write"
    ],
    "*.{ts,js,html}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "printWidth": 160
  },
  "devDependencies": {
    "@types/chrome": "^0.0.217",
    "auto-changelog": "^2.4.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-typescript": "^1.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "mini-css-extract-plugin": "^2.7.2",
    "path-browserify": "^1.0.1",
    "prettier": "^2.8.4",
    "sass": "^1.58.3",
    "sass-loader": "^13.2.0",
    "ts-loader": "^9.4.2",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "zip-webpack-plugin": "^4.0.1"
  }
}
